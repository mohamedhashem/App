<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.app">

    <!-- adding internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToDoList"
            android:label="To Do List"
            android:parentActivityName=".Profile" />
        <activity
            android:name=".CreateAccount"
            android:label="Create Account"
            android:parentActivityName=".Register" />
        <activity
            android:name=".Profile"
            android:label="Profile"></activity>
        <activity
            android:name=".setting"
            android:label="Settings"
            android:parentActivityName=".Profile" />
        <activity
            android:name=".EditProfile"
            android:label="Edit Profile"
            android:parentActivityName=".setting" />
        <activity
            android:name=".EditName"
            android:label="Edit Name"
            android:parentActivityName=".EditProfile" />
        <activity
            android:name=".EditEmail"
            android:label="Edit Email"
            android:parentActivityName=".EditProfile" />
        <activity
            android:name=".EditPassword"
            android:label="Edit Password"
            android:parentActivityName=".EditProfile" />
        <activity
            android:name=".EditAddress"
            android:label="Edit Address"
            android:parentActivityName=".EditProfile" />
        <activity
            android:name=".EditAge"
            android:label="Edit Age"
            android:parentActivityName=".EditProfile" />
        <activity
            android:name=".EditPhone"
            android:label="EditPhone"
            android:parentActivityName=".EditProfile" />
        <activity
            android:name=".AltraTop"
            android:label="AltraTop"
            android:parentActivityName=".EditProfile" />
        <activity
            android:name=".AltraBottom"
            android:label="AltraBottom"
            android:parentActivityName=".EditProfile" />
        <activity
            android:name=".Register"
            android:label="Welcome" />
    </application>

</manifest>